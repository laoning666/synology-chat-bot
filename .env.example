# =============================================================================
# Synology Chat Bot Configuration
# =============================================================================
# Copy this file as .env and fill in the actual values / 复制此文件为 .env 并填入实际的值

# =============================================================================
# Environment Settings
# =============================================================================
ENVIRONMENT=production
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO for production, DEBUG for development)
# LOG_LEVEL=INFO

# =============================================================================
# Chat API Configuration
# =============================================================================
# API Type: openai (default) or dify
CHAT_API_TYPE=openai

# --- OpenAI-compatible API Configuration ---
# For OpenAI, Azure OpenAI, or any OpenAI-compatible API
CHAT_API_URL=https://api.openai.com/v1/chat/completions
CHAT_API_KEY=your_api_key_here
CHAT_API_MODEL=gpt-3.5-turbo
CHAT_API_TEMPERATURE=0.7
CHAT_API_MAX_TOKENS=4096
CHAT_API_SYSTEM_PROMPT=你是一个智能助手，可以帮助用户解答问题。

# --- Dify API Configuration (Example) ---
# Uncomment and modify the following lines to use Dify instead:
# CHAT_API_TYPE=dify
# CHAT_API_URL=https://api.dify.ai/v1
# CHAT_API_KEY=app-your_dify_app_key
# Note: For Dify, CHAT_API_MODEL, CHAT_API_TEMPERATURE, CHAT_API_MAX_TOKENS 
# and CHAT_API_SYSTEM_PROMPT are ignored (configured in Dify dashboard)

# =============================================================================
# Synology Chat Configuration
# =============================================================================
SYNOLOGY_INCOMING_WEBHOOK_URL=your_webhook_url_here
SYNOLOGY_OUTGOING_WEBHOOK_TOKEN=your_webhook_token_here

# =============================================================================
# Conversation Settings
# =============================================================================
CONVERSATION_MAX_HISTORY=10
CONVERSATION_TIMEOUT=1800
# Set to empty to disable typing indicator (it cannot be deleted after sending)
CONVERSATION_TYPING_TEXT=AI正在思考中...

# =============================================================================
# HTTP Client Settings
# =============================================================================
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3